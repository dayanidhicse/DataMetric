<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
android:background="#f1efef"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.dayanidhi.datamatric.Data_Table">
    <ScrollView
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/logo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/juspay_icon"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
            <TextView
                android:id="@+id/txt"
                android:text="JusPay Data Metrics"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logo"
                android:layout_centerHorizontal="true" />
            <ImageView
                android:id="@+id/filt"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/ic_filter_list_black_24dp"
                android:layout_below="@+id/txt"
                android:layout_centerHorizontal="true" />
            <android.support.v7.widget.CardView
                android:id="@+id/card_view"
                android:layout_below="@+id/filt"
                android:background="@android:color/white"
                android:layout_gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="55dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="5dp"
                card_view:cardCornerRadius="2dp"
                card_view:contentPadding="10dp">

            <RelativeLayout
                android:id="@+id/ll"
                android:paddingTop="5dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height= "wrap_content">

                <TextView
                    android:paddingLeft="10dp"
                    android:id="@+id/nam"
                    android:textColor="#1233d0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Domain Name"
                    android:textSize="18sp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true" />
                <TextView
                    android:id="@+id/nam1"
                    android:paddingRight="20dp"
                    android:textColor="#1233d0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Data"
                    android:textSize="18sp"
                    android:layout_alignTop="@+id/nam"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>
            </android.support.v7.widget.CardView>

                <ListView
                    android:id="@+id/list"
                    android:paddingLeft="5dp"
                    android:paddingTop="2dp"
                    android:background="@android:color/white"
                    android:layout_below="@+id/card_view"
                    android:paddingRight="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    />

        </RelativeLayout>


    </ScrollView>





</RelativeLayout>
