<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.dayanidhi.datamatric.Data_Table">
    <ImageView
        android:id="@+id/logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/juspay_icon"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/txt"
        android:text="JusPay Data Metric"
        android:textSize="30sp"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true" />
    <RelativeLayout
        android:layout_below="@+id/txt"
        android:background="#bacdf5"
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height= "50dp">
        <TextView
android:paddingLeft="20dp"
            android:id="@+id/nam"
            android:textColor="#1233d0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Domain Name"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:id="@+id/nam1"
            android:paddingRight="20dp"
            android:textStyle="bold"
            android:textColor="#1233d0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data"
            android:textSize="18sp"
            android:layout_alignTop="@+id/nam"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <ListView
        android:id="@+id/list"
        android:paddingLeft="5dp"
        android:layout_below="@+id/ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

    </ListView>
</RelativeLayout>
